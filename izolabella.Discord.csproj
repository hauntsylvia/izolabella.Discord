<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>izolabella</Authors>
	<Version>2.3.1</Version>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
	<PackageReleaseNotes>Added parameter support for the methods of commands.</PackageReleaseNotes>
	<RepositoryUrl>https://github.com/izolabella/izolabella.Discord</RepositoryUrl>
	<RepositoryType>github</RepositoryType>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<Description>Fixed a bug where handling nullable primitive types wouldn't use its underlying type.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net" Version="3.4.1" />
    <PackageReference Include="Discord.Net.Core" Version="3.4.1" />
    <PackageReference Include="Discord.Net.Rest" Version="3.4.1" />
    <PackageReference Include="Discord.Net.Webhook" Version="3.4.1" />
    <PackageReference Include="Discord.Net.WebSocket" Version="3.4.1" />
    <PackageReference Include="izolabella.PrettyConsole" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Commands\Attributes\" />
  </ItemGroup>

</Project>
